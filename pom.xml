<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>testproj</groupId>
  <artifactId>testproject</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  
  
  <name>Ios_POC</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>

		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.4.0</version>
				<executions>
					<execution>
						<phase>test</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
						
					<!-- 	<archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>mainCode.MainClass</mainClass>
            </manifest>
          </archive> -->
							<includePluginDependencies>true</includePluginDependencies>
<!-- 							<mainClass>Ios_POC.src.test.java.mainCode.MainClass</mainClass> -->
							<mainClass>mainCode.MainClass</mainClass>
							<classpathScope>test</classpathScope>
							<addClasspath>true</addClasspath>
							<!-- <cleanupDaemonThreads>false</cleanupDaemonThreads> -->
						</configuration>
						<!-- <noExit>true</noExit> -->
						<!-- <continueOnFailure>true</continueOnFailure> -->


					</execution>
				</executions>
			</plugin>
			<!-- <plugin> -->
			<!-- <groupId>org.apache.maven.plugins</groupId> -->
			<!-- <artifactId>maven-surefire-plugin</artifactId> -->
			<!-- <version>2.18.1</version> -->
			<!-- <configuration> -->
			<!-- <archive> -->
			<!-- <manifest> -->
			<!-- <mainClass>mainCode.MainClass</mainClass> -->
			<!-- </manifest> -->
			<!-- </archive> -->
			<!-- </configuration> -->
			<!-- </plugin> -->

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
				<fork>true</fork>
<!--                 <executable>C:\Program Files\Java\jdk1.7.0_17\bin\javac.exe</executable> -->
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.18.1</version>
				<configuration>
					<argLine>-Xms1024m -Xmx1024m</argLine>
				</configuration>
			</plugin>

		</plugins>
	</build>
  
  
  
  
